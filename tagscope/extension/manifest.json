{
  "manifest_version": 3,
  "name": "Tagscope AI",
  "version": "1.0",
  "permissions": [
    "tabs",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon_grey.png",
      "32": "icon_grey.png",
      "48": "icon_grey.png",
      "128": "icon_grey.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
